@model WebAppRestaurante.Models.Prato

@{
    ViewBag.Title = "Delete";
}

<h4>Excluir Prato</h4>

<h3>Tem certeza que deseja excluir este Prato ?</h3>
<div class="form-horizontal">
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Restaurante
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Restaurante.Descricao)
            </dd>

            <dt>
                Prato
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="col-md-10">
                    <a href="/Pratos" class="btn btn-default btn-sm">Cancelar</a>
                    <input type="submit" value="Excluir" class="btn btn-danger btn-sm" />
                </div>
            </div>
        }
    </div>
</div>