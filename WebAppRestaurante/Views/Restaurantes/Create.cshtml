@model WebAppRestaurante.Models.Restaurante


<h4>Cadastro de Restaurantes</h4>


@using (Html.BeginForm("Create", "Restaurantes", FormMethod.Post, htmlAttributes: new { id = "frmCreate" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Nome do Restaurante</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <a href="/Restaurantes" class="btn btn-danger btn-sm"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp; Cancelar</a>
                <a href="#" class="btn btn-success btn-sm" id="btnSave" onclick="$('#frmCreate').submit();"><i class="fa fa-save" aria-hidden="true"></i>&nbsp; Salvar</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
